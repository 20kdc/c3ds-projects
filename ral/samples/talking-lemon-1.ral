include "std/c3ds.ral";

class TalkingLemon 2 24 8802;

install {
	newSimp(TalkingLemon, "ds lemon pod", 1, 30, 8000);
	mvsf(631, 9158);
	perm(100);
	attr(ATTR_PHYSICS | ATTR_COLLIDE | ATTR_ACTIVATE | ATTR_MOUSE | ATTR_CARRY);
	aero(10);
	accg(2);
}

script TalkingLemon:act1 {
	rtar(SpeechBubbleFactory);
	with SpeechBubbleFactory targ {
		targ->speechBubble("Hello! I'm a talking lemon!", ownr);
	}
}

